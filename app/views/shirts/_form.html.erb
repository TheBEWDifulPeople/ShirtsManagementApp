<% if @shirt.errors.any? %>
<h2>There were errors saving your shirt</h2>
<ul>
  <% @shirt.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @shirt do |f| %>
  <fieldset>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :image %>
<%= f.file_field :image %>
<%= f.label :tag_list %>
<%= f.text_field :tag_list, value:  format_tag_list(@shirt.tag_list) %>
<%= f.label :vendor_id, "Select a vendor" %>
<%= f.collection_select :vendor_id, @vendors, :id, :name %></br>
<%= f.submit class: 'btn'%>
  </fieldset>
<% end %>
